#!/usr/bin/env ruby

require_relative '../lib/parser.rb'
require_relative '../lib/validator.rb'
# TODO: method for 8-11
def handle_directories(dir)
  Dir.glob("#{dir}/**/*.rb") do |filename|
    parser = Parser.new(filename)
    names = parser.extract_names
    validator = Validator.new(names, filename)
    puts validator.validate_names
  end
end
if ARGV.size.positive?
  ARGV.each do |filename|
    if File.directory?(filename)
      handle_directories(filename)
    else
      parser = Parser.new(filename)
      names = parser.extract_names
      validator = Validator.new(names, filename)
      puts validator.validate_names
    end
  end
else
  handle_directories('.')
end
