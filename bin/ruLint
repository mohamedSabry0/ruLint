#!/usr/bin/env ruby

# reading file

require_relative '../lib/parser.rb'
if ARGV.size > 0
  ARGV.each do |filename|
    parser = Parser.new(filename)
    names = parser.extract_names
    puts parser.validate_classes(names)
  end
else
  Dir.glob('**/*.rb') do |filename|
    parser = Parser.new(filename)
    names = parser.extract_names
    puts parser.validate_classes(names)
  end
end
